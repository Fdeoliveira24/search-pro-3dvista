{
  "name": "search-pro-v3",
  "version": "3.1.0",
  "description": "Search Pro Configuration Loading - Technical Reference - Race Condition Fix",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,css,html}\" --ignore-path .prettierignore",
    "format:check": "prettier --check \"**/*.{js,css,html}\" --ignore-path .prettierignore",
    "minify": "node scripts/minify-all.js",
    "minify:search": "terser search-v3.js -o search-v3.min.js --config-file terser.config.json",
    "minify:dashboard": "node scripts/minify-dashboard.js",
    "minify:css": "node scripts/minify-css.js",
    "build": "npm run format && npm run minify",
    "build:production": "npm run format && npm run minify && npm run deploy",
    "deploy": "node scripts/deploy-minified.js",
    "restore": "node scripts/restore-original.js"
  },
  "devDependencies": {
    "prettier": "^3.0.0",
    "terser": "^5.22.0",
    "clean-css-cli": "^5.6.2"
  }
}
